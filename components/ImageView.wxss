.container{
  position: relative;
}
.functionContainer{
  position: absolute;
  left: calc(50% - 125rpx);
  top: calc(50% - 32.5rpx);
}
.downloadContainer{
  padding: 0 !important;
  margin: 0 !important;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 250rpx !important;
  height: 65rpx !important;
  background-color: rgba(0,0,0,0.3);
  border-radius: 32.5rpx;
  font-size: 30rpx;
}
.btnHover {
  background-color: rgba(0,0,0,0.1);
}
.img{
  width: 100%;
  display: block;
}